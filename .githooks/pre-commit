#!/bin/sh

# Git Hook Pre-Commit
# Actualiza automáticamente la versión antes de cada commit

echo "🚀 Ejecutando pre-commit hook..."

# Ejecutar script de actualización de versión
node scripts/auto-update-version.js

# Verificar si el script se ejecutó correctamente
if [ $? -eq 0 ]; then
    echo "✅ Pre-commit hook completado exitosamente"
    echo "📝 Archivos de versión actualizados y agregados al commit"
else
    echo "❌ Error en pre-commit hook"
    exit 1
fi

# Continuar con el commit
exit 0